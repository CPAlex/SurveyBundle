<div>
    <h3>{{ question.getQuestion()|raw }}</h3>
    <br>
    <div id="question-body" style="padding-left: 50px">
        <textarea class="claroline-tiny-mce" name="{{ question.getId() }}[answer]">{% if answers['answer'] is defined %}{{ answers['answer']|raw }}{% endif %}</textarea>
        
        {% if question.isCommentAllowed() %}
            <br>
            <div>
                <label>{{ 'comment'|trans({}, 'survey') }}</label>
                <textarea rows="4" name="{{ question.getId() }}[comment]">{% if answers['comment'] is defined %}{{ answers['comment'] }}{% endif %}</textarea>
            </div>
        {% endif %}
    </div>
</div>